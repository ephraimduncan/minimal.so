{
  "manifest_version": 3,
  "name": "Minimal - Save Bookmarks",
  "version": "1.0.0",
  "description": "Save any page or link to your Minimal bookmarks with one click",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "notifications",
    "management"
  ],
  "host_permissions": ["https://minimal.so/*", "http://localhost:3000/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Save to Minimal"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
